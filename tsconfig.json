{
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "module": "NodeNext",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@client/*": [
        "src/client/*"
      ],
      "@server/*": [
        "src/server/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/@types/*.ts"
  ]
}